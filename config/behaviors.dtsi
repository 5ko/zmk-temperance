// Simple hold-tabs, hold-preferred
// #define HTHP(name, ...) ZMK_HOLD_TAB(name, flavor = "hold-preferred"; \
//     tapping-term-ms = <HOLDTAP_TERM>; __VA_ARGS__)

#define HTHP(name, ...)  \
  / { \
    behaviors { \
      name: name { \
        compatible = "zmk,behavior-hold-tap"; \
        flavor = "hold-preferred"; \
        tapping-term-ms = <HOLDTAP_TERM>; \
        #binding-cells = <2>;\
        __VA_ARGS__ \
      }; \
    }; \
  };

// Simple macros
#define MCR(name, binds)  \
  / { \
    behaviors { \
      name: macro_ ## name { \
        compatible = "zmk,behavior-macro"; \
        #binding-cells = <0> \
        bindings = binds ; \
      }; \
    }; \
  };

  
MCR(nxkbly, < &kp GLOBE &kp LA(LSHFT) >)
HTHP(nx_kp, bindings = <&nxkbly>, <&kp>;)


